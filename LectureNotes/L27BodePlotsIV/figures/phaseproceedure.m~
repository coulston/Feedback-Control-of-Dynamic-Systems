figure(1)
clf
set(1,'position',[300 400 600 300])
axes
set(gca,'xscale','log','fontsize',14,'ytick',[-180 -135 -90 -45 0 45 90],'xtick',[.1 1 10 100 1000],'xticklabel',{'.1','1','10','100','1000'},'box','on')
axis([.1 500 -180 90])
xlabel('\textsf{Frequency} $\omega$ \textsf{(rad/s)}')
ylabel('\textsf{Phase (deg)}')
grid

plotpdftex(1,['phaseproceedure1'],[1.4 1])

figure(2)
clf
set(2,'position',[300 400 600 300])
axes
set(gca,'xscale','log','fontsize',14,'ytick',[-180 -135 -90 -45 0 45 90],'xtick',[.1 1 10 100 1000],'xticklabel',{'.1','1','10','100','1000'},'box','on')
axis([.1 500 -180 90])
hold on
line([.1 1],[0 45],'linewidth',3,'color','blue')
hold off
xlabel('\textsf{Frequency} $\omega$ \textsf{(rad/s)}')
ylabel('\textsf{Phase (deg)}')
grid

plotpdftex(2,['phaseproceedure2'],[1.4 1])


figure(3)
clf
set(3,'position',[300 400 600 300])
axes
set(gca,'xscale','log','fontsize',14,'ytick',[-180 -135 -90 -45 0 45 90],'xtick',[.1 1 10 100 1000],'xticklabel',{'.1','1','10','100','1000'},'box','on')
axis([.1 500 -180 90])
hold on
line([.1 1],[0 45],'linewidth',3,'color','blue')
line([1 5],[45 45-45*log10(5)],'linewidth',3,'color','blue')
hold off
xlabel('\textsf{Frequency} $\omega$ \textsf{(rad/s)}')
ylabel('\textsf{Phase (deg)}')
grid

plotpdftex(3,['phaseproceedure3'],[1.4 1])

figure(4)
clf
set(4,'position',[300 400 600 300])
axes
set(gca,'xscale','log','fontsize',14,'ytick',[-180 -135 -90 -45 0 45 90],'xtick',[.1 1 10 100 1000],'xticklabel',{'.1','1','10','100','1000'},'box','on')
axis([.1 500 -180 90])
hold on
line([.1 1],[0 45],'linewidth',3,'color','blue')
a=45-45*log10(5);
line([1 5],[45 a],'linewidth',3,'color','blue')
b=a-90*(log10(10)-log10(5));
line([5 10],[a b],'linewidth',3,'color','blue')
c=b-135;
line([10 100],[b c],'linewidth',3,'color','blue')
d=c-45*log10(5);
line([10 100],[c d],'linewidth',3,'color','blue')
hold off
xlabel('\textsf{Frequency} $\omega$ \textsf{(rad/s)}')
ylabel('\textsf{Phase (deg)}')
grid

plotpdftex(4,['phaseproceedure4'],[1.4 1])


