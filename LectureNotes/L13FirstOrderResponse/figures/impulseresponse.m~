sys=tf([1],[1 1])
figure(1)
clf
set(1,'position',[10 10 500 400])
set(1,'papersize',[5 4])
set(1,'paperposition',[.1 .1 4.9 3.9])
[y,t]=impulse(sys,5);
y=[zeros(10,1);y];
dt=t(2)-t(1);
t=[(-10*dt:dt:-dt)';t];
plot(t,y,'linewidth',2)
set(gca,'xtick',[0 1 2 3 4],'xticklabel',{'0','$\frac{1}{\sigma}$','$\frac{2}{\sigma}$','$\frac{3}{\sigma}$','$\frac{4}{\sigma}$'})
set(gca,'ytick',[exp(-1) 1],'yticklabel',{'0.36K','K'})
hold on
plot([min(t) 1],[exp(-1) exp(-1)],'k:','linewidth',1)
plot([1 1],[exp(-1) 0],':k','linewidth',1)
hold off
set(gca,'position',[.2,.2,.7,.75])
axis([min(t) max(t) 0 1])
set(gca,'fontsize',14)
text(2.25,-.2,'Time (s)','horizontalalignment','center')
text(-.5,.5,'Magnitude',
a=get(get(gca,'ylabel'),'Position')
a(1)=-2;
set(get(gca,'ylabel'),'Position',a)
plotpdftex(1,'impulseresponse',[1.5 1])
