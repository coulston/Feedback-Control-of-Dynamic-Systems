sys=tf([1],[1 1])
figure(1)
clf
set(1,'position',[10 10 500 400])
set(1,'papersize',[5 4])
set(1,'paperposition',[.1 .1 4.9 3.9])
[y,t]=step(sys,6);
y=[zeros(10,1);y];
dt=t(2)-t(1);
t=[(-10*dt:dt:-dt)';t];
plot(t,y,'linewidth',2)
set(gca,'xtick',[0 1 2 3 4 4.6 5],'xticklabel',{'0','$\frac{1}{\sigma}$','$\frac{2}{\sigma}$','$\frac{3}{\sigma}$','$\frac{4}{\sigma}$','$t_{s}$','$\frac{5}{\sigma}$'})
set(gca,'ytick',[1],'yticklabel',{'$K$'})
hold on
plot([min(t) 4.6],[.99 .99],'k:','linewidth',1)
plot([4.6 4.6],[.99 0],':k','linewidth',1)
hold off
set(gca,'position',[.2,.2,.7,.75])
axis([min(t) max(t) 0 1])
set(gca,'fontsize',14)
text(2.25,-.2,'Time (s)','horizontalalignment','center')
text(-1.25,.5,'Magnitude','Rotation',90,'verticalalignment','middle','horizontalalignment','center')
plotpdftex(1,'stepresponse',[1.5 1])


figure(2)
clf
set(2,'position',[10 10 500 400])
set(2,'papersize',[5 4])
set(2,'paperposition',[.1 .1 4.9 3.9])
plot(t,y,'linewidth',2)
set(gca,'xtick',[0 0.105 2.3 3 4 5],'xticklabel',{'0','','$\hspace{-.25in}\leftarrow t_{r}\rightarrow$','$\frac{3}{\sigma}$','$\frac{4}{\sigma}$','$\frac{5}{\sigma}$'})
set(gca,'ytick',[1],'yticklabel',{'$K$'})
hold on
plot([min(t) 0.105],[.1 .1],'k:','linewidth',1)
plot([min(t) 2.3],[.9 .9],'k:','linewidth',1)
plot([0.105 0.105],[. 0],':k','linewidth',1)
plot([4.6 4.6],[.99 0],':k','linewidth',1)
hold off
set(gca,'position',[.2,.2,.7,.75])
axis([min(t) max(t) 0 1])
set(gca,'fontsize',14)
text(2.25,-.2,'Time (s)','horizontalalignment','center')
text(-1.25,.5,'Magnitude','Rotation',90,'verticalalignment','middle','horizontalalignment','center')
plotpdftex(2,'stepresponse2',[1.5 1])
