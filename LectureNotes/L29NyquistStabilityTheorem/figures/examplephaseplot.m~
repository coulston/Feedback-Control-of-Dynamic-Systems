figure(1)
clf
set(1,'position',[300 400 600 300])
axes
set(gca,'xscale','log','fontsize',14,'ytick',[-180 -135 -90 -45 0 45 90],'xtick',[.1 1 10 100],'xticklabel',{'.1','1','10','100','1000'},'box','on')
axis([.05 200 -180 90])
line([.05 .1],[0 ],'linewidth',3,'color','blue')
line([1 2],[12 12+20*.3],'linewidth',3,'color','blue')
line([2 10],[12+20*.3 12+20*.3-20*.7],'linewidth',3,'color','blue')
line([10 200],[12+20*.3-20*.7 12+20*.3-20*.7-60*1.3],'linewidth',3,'color','blue')
xlabel('\textsf{Frequency} $\omega$ \textsf{(rad/s)}')
ylabel('\textsf{Phase (deg)}')
grid

