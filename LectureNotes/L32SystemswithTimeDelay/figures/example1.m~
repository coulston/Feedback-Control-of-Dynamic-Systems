s=tf([1 0],1);
sys=1/(s+1);
[mag,phase,omega]=bode(sys);
mag=squeeze(mag);
phase=squeeze(phase);
figure(1)
clf
set(1,'position',[10 10 600 400])
set(1,'papersize',[6 4])
set(1,'paperposition',[0 0 6 4])
semilogx(omega,20*log10(mag),'linewidth',2)
axis([.01 10 -40 10])
set(gca,'ytick',[-40 -30 -20 -10 0 10])
xlabel('Frequency (rad/s)')
magni
grid

